{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2017",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist/dts",
        "strict": true,
        "skipLibCheck": true,
        "types": ["types-base", "@types/jest"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
